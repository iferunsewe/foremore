<tr>
  <td><%= team.created_at.strftime('%Y-%m-%d %H:%M') %></td>
  <td>
    <%= link_to team_path(team), data: { turbo: false } do %>
      <%= team.address.one_line %>
    <% end %>
  </td>
  <% if current_user.admin? %>
    <td><%= link_to team.company.name, company_path(team.company) %></td>
  <% end %>
  <td><%= team.employees_count %></td>
  <td>
    <% if current_user&.admin? || current_user.company_admin? || current_user&.team_admin? %>
      <%= link_to edit_team_path(team), data: { turbo: false } do %>
        <i class="bi bi-pencil-fill"></i>
        Edit
      <% end %>
    <% end %>
  </td>
</tr>
