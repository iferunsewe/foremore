<%= title("users") %>
<div id="users">
  <table class="table table-hover table-borderless table-responsive">
    <thead>
      <tr>
        <th scope="col">
          <div class="th-inner">
            Joined
          </div>
        </th>
        <th scope="col">
          <div class="th-inner">
            Full Name
          </div>
        </th>
        <th scope="col">
          <div class="th-inner">
            Role
          </div>
        </th>
        <% if current_user.admin? %>
          <th scope="col">
            <div class="th-inner">
              Team
            </div>
          </th>
          <th scope="col">
            <div class="th-inner">
              Company
            </div>
          </th>
        <% end %>
        <th scope="col">
          <div class="th-inner">
            Actions
          </div>
        </th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <%= render partial: "users/users_table_row", locals: { user: user } %>
      <% end %>
    </tbody>
  </table>
</div>
